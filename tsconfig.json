{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "sourceMap": true,
    "inlineSources": true,
    "inlineSourceMap": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    ".next-chromium/types/**/*.ts",
    ".next-chromium/dev/types/**/*.ts",
    ".next-firefox/types/**/*.ts",
    ".next-firefox/dev/types/**/*.ts",
    ".next-webkit/types/**/*.ts",
    ".next-webkit/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
